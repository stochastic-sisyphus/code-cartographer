<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Code Cartographer - Living Codebase Explorer</title>
  
  <script src="https://d3js.org/d3.v7.min.js"></script>
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
      color: #e0e0e0;
      overflow: hidden;
      height: 100vh;
    }

    #visualization-container {
      width: 100vw;
      height: 100vh;
      position: relative;
    }

    #graph-canvas {
      width: 100%;
      height: 100%;
    }

    .controls {
      position: fixed;
      top: 20px;
      left: 20px;
      background: rgba(20, 20, 40, 0.9);
      backdrop-filter: blur(10px);
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
      max-width: 320px;
      z-index: 1000;
    }

    .controls h1 {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 16px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .control-group {
      margin-bottom: 16px;
    }

    .control-group label {
      display: block;
      font-size: 12px;
      color: #a0a0a0;
      margin-bottom: 6px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .slider {
      width: 100%;
      height: 4px;
      background: rgba(255, 255, 255, 0.1);
      outline: none;
      border-radius: 2px;
      -webkit-appearance: none;
    }

    .slider::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 16px;
      height: 16px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      cursor: pointer;
      border-radius: 50%;
      box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
    }

    .slider::-moz-range-thumb {
      width: 16px;
      height: 16px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      cursor: pointer;
      border-radius: 50%;
      border: none;
      box-shadow: 0 2px 8px rgba(102, 126, 234, 0.4);
    }

    .timeline-display {
      margin-top: 8px;
      font-size: 13px;
      color: #e0e0e0;
      font-weight: 500;
    }

    .play-button {
      width: 100%;
      padding: 10px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 8px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
      font-size: 14px;
    }

    .play-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(102, 126, 234, 0.5);
    }

    .play-button:active {
      transform: translateY(0);
    }

    .stats {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: rgba(20, 20, 40, 0.9);
      backdrop-filter: blur(10px);
      padding: 16px;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
      min-width: 200px;
      z-index: 1000;
    }

    .stat-item {
      margin-bottom: 8px;
      display: flex;
      justify-content: space-between;
      font-size: 12px;
    }

    .stat-label {
      color: #a0a0a0;
    }

    .stat-value {
      color: #e0e0e0;
      font-weight: 600;
    }

    .tooltip {
      position: fixed;
      background: rgba(20, 20, 40, 0.95);
      backdrop-filter: blur(10px);
      padding: 12px 16px;
      border-radius: 8px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(255, 255, 255, 0.1);
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.2s;
      z-index: 2000;
      max-width: 300px;
    }

    .tooltip.active {
      opacity: 1;
    }

    .tooltip-title {
      font-weight: 600;
      margin-bottom: 6px;
      color: #e0e0e0;
    }

    .tooltip-content {
      font-size: 12px;
      color: #a0a0a0;
      line-height: 1.5;
    }

    .legend {
      position: fixed;
      top: 20px;
      right: 20px;
      background: rgba(20, 20, 40, 0.9);
      backdrop-filter: blur(10px);
      padding: 16px;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
      z-index: 1000;
    }

    .legend-title {
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 12px;
      color: #e0e0e0;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .legend-item {
      display: flex;
      align-items: center;
      margin-bottom: 8px;
      font-size: 11px;
    }

    .legend-color {
      width: 16px;
      height: 16px;
      border-radius: 3px;
      margin-right: 8px;
    }

    .node {
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .node:hover {
      filter: brightness(1.3);
    }

    .link {
      stroke-opacity: 0.3;
      transition: stroke-opacity 0.3s ease;
    }

    .link.active {
      stroke-opacity: 0.8;
      stroke-width: 2px;
    }

    @keyframes pulse {
      0%, 100% {
        opacity: 0.6;
      }
      50% {
        opacity: 1;
      }
    }

    .node.pulsing {
      animation: pulse 2s ease-in-out infinite;
    }
  </style>
</head>
<body>
  <div id="visualization-container">
    <svg id="graph-canvas"></svg>
  </div>

  <div class="controls">
    <h1>Living Codebase</h1>
    
    <div class="control-group">
      <label>Temporal Timeline</label>
      <input type="range" class="slider" id="timeline-slider" min="0" max="100" value="100" step="1">
      <div class="timeline-display" id="timeline-display">Latest</div>
    </div>

    <div class="control-group">
      <label>Interaction Strength</label>
      <input type="range" class="slider" id="strength-slider" min="0" max="100" value="50" step="1">
    </div>

    <div class="control-group">
      <label>Complexity View</label>
      <input type="range" class="slider" id="complexity-slider" min="0" max="100" value="50" step="1">
    </div>

    <button class="play-button" id="play-button">▶ Play Evolution</button>
  </div>

  <div class="legend">
    <div class="legend-title">Element Types</div>
    <div class="legend-item">
      <div class="legend-color" style="background: linear-gradient(135deg, #667eea, #764ba2);"></div>
      <span>Function</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background: linear-gradient(135deg, #f093fb, #f5576c);"></div>
      <span>Class</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background: linear-gradient(135deg, #4facfe, #00f2fe);"></div>
      <span>Module</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background: linear-gradient(135deg, #43e97b, #38f9d7);"></div>
      <span>In Harmony</span>
    </div>
    <div class="legend-item">
      <div class="legend-color" style="background: linear-gradient(135deg, #fa709a, #fee140);"></div>
      <span>Under Tension</span>
    </div>
  </div>

  <div class="stats">
    <div class="stat-item">
      <span class="stat-label">Elements:</span>
      <span class="stat-value" id="stat-elements">0</span>
    </div>
    <div class="stat-item">
      <span class="stat-label">Connections:</span>
      <span class="stat-value" id="stat-connections">0</span>
    </div>
    <div class="stat-item">
      <span class="stat-label">Avg Complexity:</span>
      <span class="stat-value" id="stat-complexity">0</span>
    </div>
    <div class="stat-item">
      <span class="stat-label">Activity:</span>
      <span class="stat-value" id="stat-activity">Stable</span>
    </div>
  </div>

  <div class="tooltip" id="tooltip">
    <div class="tooltip-title" id="tooltip-title"></div>
    <div class="tooltip-content" id="tooltip-content"></div>
  </div>

  <script>
    // Data structure for the visualization
    const data = {{ data | tojson | safe }};
    
    // Configuration
    const width = window.innerWidth;
    const height = window.innerHeight;
    
    // SVG setup
    const svg = d3.select('#graph-canvas')
      .attr('width', width)
      .attr('height', height);
    
    // Create groups for links and nodes
    const linkGroup = svg.append('g').attr('class', 'links');
    const nodeGroup = svg.append('g').attr('class', 'nodes');
    
    // Color scales for different node types
    const colorScale = {
      'function': d3.interpolateRgbBasis(['#667eea', '#764ba2']),
      'class': d3.interpolateRgbBasis(['#f093fb', '#f5576c']),
      'module': d3.interpolateRgbBasis(['#4facfe', '#00f2fe']),
    };
    
    // Force simulation
    const simulation = d3.forceSimulation()
      .force('link', d3.forceLink().id(d => d.id).distance(100))
      .force('charge', d3.forceManyBody().strength(-300))
      .force('center', d3.forceCenter(width / 2, height / 2))
      .force('collision', d3.forceCollide().radius(30));
    
    // Tooltip
    const tooltip = d3.select('#tooltip');
    
    let nodes = [];
    let links = [];
    let isPlaying = false;
    let animationFrame = 0;
    
    // Initialize visualization
    function initVisualization() {
      // Process data
      nodes = data.nodes || [];
      links = data.links || [];
      
      // Create links
      const link = linkGroup.selectAll('line')
        .data(links)
        .join('line')
        .attr('class', 'link')
        .attr('stroke', d => getLinkColor(d))
        .attr('stroke-width', d => Math.max(1, d.strength * 3));
      
      // Create nodes
      const node = nodeGroup.selectAll('circle')
        .data(nodes)
        .join('circle')
        .attr('class', 'node')
        .attr('r', d => getNodeRadius(d))
        .attr('fill', d => getNodeColor(d))
        .call(drag(simulation))
        .on('mouseover', handleMouseOver)
        .on('mouseout', handleMouseOut)
        .on('click', handleClick);
      
      // Update simulation
      simulation.nodes(nodes)
        .on('tick', () => {
          link
            .attr('x1', d => d.source.x)
            .attr('y1', d => d.source.y)
            .attr('x2', d => d.target.x)
            .attr('y2', d => d.target.y);
          
          node
            .attr('cx', d => d.x)
            .attr('cy', d => d.y);
        });
      
      simulation.force('link').links(links);
      
      updateStats();
    }
    
    // Get node color based on type and complexity
    function getNodeColor(node) {
      const baseColor = colorScale[node.type] || colorScale['module'];
      const complexityFactor = (node.complexity || 0) / 100;
      return baseColor(0.5 + complexityFactor * 0.5);
    }
    
    // Get node radius based on importance
    function getNodeRadius(node) {
      const baseRadius = 8;
      const importanceFactor = (node.importance || 1);
      return baseRadius + importanceFactor * 5;
    }
    
    // Get link color based on relationship type
    function getLinkColor(link) {
      if (link.type === 'tension') {
        return '#fa709a';
      } else if (link.type === 'harmony') {
        return '#43e97b';
      }
      return 'rgba(255, 255, 255, 0.2)';
    }
    
    // Drag behavior
    function drag(simulation) {
      function dragstarted(event) {
        if (!event.active) simulation.alphaTarget(0.3).restart();
        event.subject.fx = event.subject.x;
        event.subject.fy = event.subject.y;
      }
      
      function dragged(event) {
        event.subject.fx = event.x;
        event.subject.fy = event.y;
      }
      
      function dragended(event) {
        if (!event.active) simulation.alphaTarget(0);
        event.subject.fx = null;
        event.subject.fy = null;
      }
      
      return d3.drag()
        .on('start', dragstarted)
        .on('drag', dragged)
        .on('end', dragended);
    }
    
    // Mouse over handler
    function handleMouseOver(event, d) {
      // Highlight connected nodes
      const connectedIds = new Set();
      links.forEach(link => {
        if (link.source.id === d.id) connectedIds.add(link.target.id);
        if (link.target.id === d.id) connectedIds.add(link.source.id);
      });
      
      nodeGroup.selectAll('circle')
        .style('opacity', node => node.id === d.id || connectedIds.has(node.id) ? 1 : 0.3);
      
      linkGroup.selectAll('line')
        .classed('active', link => link.source.id === d.id || link.target.id === d.id);
      
      // Show tooltip
      tooltip.classed('active', true)
        .style('left', (event.pageX + 10) + 'px')
        .style('top', (event.pageY + 10) + 'px');
      
      d3.select('#tooltip-title').text(d.name || d.id);
      d3.select('#tooltip-content').html(`
        Type: ${d.type}<br>
        Complexity: ${d.complexity || 'N/A'}<br>
        Connections: ${connectedIds.size}<br>
        ${d.description || ''}
      `);
    }
    
    // Mouse out handler
    function handleMouseOut(event, d) {
      nodeGroup.selectAll('circle').style('opacity', 1);
      linkGroup.selectAll('line').classed('active', false);
      tooltip.classed('active', false);
    }
    
    // Click handler
    function handleClick(event, d) {
      console.log('Clicked node:', d);
      // Could expand to show more details or navigate
    }
    
    // Update statistics
    function updateStats() {
      d3.select('#stat-elements').text(nodes.length);
      d3.select('#stat-connections').text(links.length);
      
      if (nodes.length > 0) {
        const avgComplexity = nodes.reduce((sum, n) => sum + (n.complexity || 0), 0) / nodes.length;
        d3.select('#stat-complexity').text(avgComplexity.toFixed(1));
      } else {
        d3.select('#stat-complexity').text('0');
      }
    }
    
    // Timeline slider
    d3.select('#timeline-slider').on('input', function() {
      const value = +this.value;
      const display = value === 100 ? 'Latest' : `${value}% of history`;
      d3.select('#timeline-display').text(display);
      
      // Filter nodes based on timeline
      const threshold = value / 100;
      const filteredNodes = nodes.filter((n, i) => (i / nodes.length) <= threshold);
      
      // Update visualization (simplified)
      nodeGroup.selectAll('circle')
        .style('opacity', (d, i) => (i / nodes.length) <= threshold ? 1 : 0.1);
    });
    
    // Strength slider
    d3.select('#strength-slider').on('input', function() {
      const value = +this.value / 100;
      simulation.force('charge').strength(-300 * (1 + value));
      simulation.alpha(0.3).restart();
    });
    
    // Complexity slider
    d3.select('#complexity-slider').on('input', function() {
      const value = +this.value / 100;
      
      nodeGroup.selectAll('circle')
        .attr('r', d => getNodeRadius(d) * (0.7 + value * 0.6));
    });
    
    // Play button
    d3.select('#play-button').on('click', function() {
      isPlaying = !isPlaying;
      this.textContent = isPlaying ? '⏸ Pause' : '▶ Play Evolution';
      
      if (isPlaying) {
        animateEvolution();
      }
    });
    
    // Animate evolution
    function animateEvolution() {
      if (!isPlaying) return;
      
      animationFrame = (animationFrame + 1) % 101;
      d3.select('#timeline-slider').property('value', animationFrame);
      d3.select('#timeline-slider').dispatch('input');
      
      setTimeout(() => requestAnimationFrame(animateEvolution), 100);
    }
    
    // Window resize handler
    window.addEventListener('resize', () => {
      const newWidth = window.innerWidth;
      const newHeight = window.innerHeight;
      
      svg.attr('width', newWidth).attr('height', newHeight);
      simulation.force('center', d3.forceCenter(newWidth / 2, newHeight / 2));
      simulation.alpha(0.3).restart();
    });
    
    // Initialize
    initVisualization();
  </script>
</body>
</html>
